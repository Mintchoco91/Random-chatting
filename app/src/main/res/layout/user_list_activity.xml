<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/maskImageLayout"
        android:orientation="vertical"
        android:gravity="center">
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리스트 화면"/>
    
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firebase 디렉토리 전체 불러오기"
            android:id="@+id/bt_directory_image_load"
            android:visibility="invisible"/>
    
        <ImageView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:id="@+id/user_list_activity_iv_area" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:gravity="left">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="이   름 : "/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_list_activity_tv_name"/>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:gravity="left">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="성   별 : "/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_list_activity_tv_gender"/>

    </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:gravity="left">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="나   이 : "/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_list_activity_tv_age"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:gravity="left">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="핸드폰 번호 : "/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_list_activity_tv_phone_number"/>

    </LinearLayout>

    </LinearLayout>
</ScrollView>