<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <TextView
        android:id="@+id/activity_main_tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_main_et_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="입력 해 주세요"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_tv_user_name" />

    <TextView
        android:id="@+id/activity_main_tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별 : "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_et_user_name" />


    <Button
        android:id="@+id/activity_main_btn_gender_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/color_change"
        android:text="남"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_tv_gender" />

    <Button
        android:id="@+id/activity_main_btn_gender_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:background="@drawable/color_change"
        android:text="여"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_tv_gender" />

    <TextView
        android:id="@+id/activity_main_tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이 : "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_btn_gender_man" />

    <Spinner
        android:id="@+id/activity_main_spn_age"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:entries="@array/age"
        android:prompt="@string/promt_age"
        android:textSize="18sp"
        android:background="@drawable/spinner_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_tv_age" />

    <TextView
        android:id="@+id/activity_main_tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핸드폰번호 : "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_spn_age"  />

    <EditText
        android:id="@+id/activity_main_et_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ems="8"
        android:hint="입력 해 주세요"
        android:inputType="phone"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_tv_phone_number" />


    <Button
        android:id="@+id/activity_main_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다 음"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_et_phone_number" />

</androidx.constraintlayout.widget.ConstraintLayout>