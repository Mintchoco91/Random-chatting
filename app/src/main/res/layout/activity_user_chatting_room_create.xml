<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".userChattingRoomCreate.UserChattingRoomCreateActivity">


    <LinearLayout
        android:id="@+id/activity_user_chatting_room_create_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/activity_user_chatting_room_create_tv_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="방 제목"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/activity_user_chatting_room_create_et_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_rounded"
            android:ems="10"
            android:hint="방 제목을 입력하세요"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="#818181"
            android:textSize="14sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/activity_user_chatting_room_create_layout2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_user_chatting_room_create_layout1">

        <Button
            android:id="@+id/activity_user_chatting_room_create_btn_room_create"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:text="방 만들기" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>