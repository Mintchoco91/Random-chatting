<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/regist_phone_number_activity_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        style="@style/logo_font_style"
        android:layout_marginTop="130dp"
        android:layout_marginRight="150dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/regist_phone_number_activity_tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호를 인증해 주세요."
        style="@style/logo_sub_font_style"
        android:layout_marginRight="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regist_phone_number_activity_tv_title"/>

    <LinearLayout
        android:id="@+id/regist_phone_number_activity_linearlayout"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:background="@drawable/image_gray_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regist_phone_number_activity_tv_sub_title">

        <TextView
            android:id="@+id/regist_phone_number_activity_sb_country_code"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="+82"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/regist_phone_number_activity_tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="전화번호를 입력하세요."
            android:textColorHint="@color/hint_color" />

    </LinearLayout>

    <Button
        android:id="@+id/login_activity_btn_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:text="계속하기"
        android:background="@drawable/basic_btn"
        android:textColor="@color/basic_font_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regist_phone_number_activity_linearlayout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>