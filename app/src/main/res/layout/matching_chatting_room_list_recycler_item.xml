<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="horizontal"
    android:layout_marginTop="50dp">

    <!-- Icon -->
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/matching_chatting_room_list_recycler_item_iv_photo_name"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="2dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_upload_photo" />

    <!-- Name -->
    <TextView
        android:id="@+id/matching_chatting_room_list_recycler_item_tv_nick_name"
        style="@style/logo_font_style"
        android:textSize="40dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:text="가나다라" />

</LinearLayout>