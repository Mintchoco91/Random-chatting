<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_onboarding_iv_main_image"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/img_onboarding_main_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/activity_onboarding_iv_green_right_logo"
        android:layout_width="161dp"
        android:layout_height="34dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/green_right_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_onboarding_iv_main_image"
        />


    <ImageView
        android:id="@+id/activity_onboarding_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_onboarding_iv_green_right_logo"
        android:background="@drawable/img_onboarding_description"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/activity_onboarding_btn_regist"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="가입하기"
        android:background="@drawable/basic_btn"
        android:textColor="@color/basic_font_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_onboarding_tv_description"
    />

    <LinearLayout
        android:id="@+id/activity_onboarding_linearlayout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/activity_onboarding_btn_regist">

        <TextView
            android:id="@+id/activity_onboarding_tv_login_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그린라이트의 회원이세요?"
            android:textColor="@color/black" />

            <TextView
                android:id="@+id/activity_onboarding_tv_login_click_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Sign In"
                android:textColor="@color/main_color_green" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>