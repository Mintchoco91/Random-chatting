<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/regist_phone_text_code_activity_tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 : 00"
        android:includeFontPadding="false"
        style="@style/normal_font_style"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/regist_phone_text_code_activity_tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="인증번호를 넣어주세요!"
        style="@style/normal_font_style"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regist_phone_text_code_activity_tv_timer"/>

    <LinearLayout
        android:id="@+id/regist_phone_text_code_activity_input_code_linearlayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regist_phone_text_code_activity_tv_sub_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/regist_phone_text_code_activity_tv_code1"
            android:layout_width="60dp"
            android:layout_height="65dp"
            style="@style/normal_font_style"
            android:text="0"
            android:textSize="45dp"
            android:textColor="@color/gray"
            android:includeFontPadding="false"
            android:gravity="center"
            android:background="@drawable/image_phone_text_rectangle"
            />
        <TextView
            android:id="@+id/regist_phone_text_code_activity_tv_code2"
            android:layout_width="60dp"
            android:layout_height="65dp"
            style="@style/normal_font_style"
            android:text="0"
            android:textSize="45dp"
            android:textColor="@color/gray"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/image_phone_text_rectangle"
            />
        <TextView
            android:id="@+id/regist_phone_text_code_activity_tv_code3"
            android:layout_width="60dp"
            android:layout_height="65dp"
            style="@style/normal_font_style"
            android:text="0"
            android:textSize="45dp"
            android:textColor="@color/gray"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/image_phone_text_rectangle"
            />

        <TextView
            android:id="@+id/regist_phone_text_code_activity_tv_code4"
            android:layout_width="60dp"
            android:layout_height="65dp"
            style="@style/normal_font_style"
            android:text="0"
            android:textSize="45dp"
            android:textColor="@color/gray"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/image_phone_text_rectangle"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/regist_phone_text_code_activity_keypad_line_1_linearlayout"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regist_phone_text_code_activity_input_code_linearlayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/keypad_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/normal_font_style"
            android:text="1"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="@color/white"
            />
        <Button
            android:id="@+id/keypad_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/keypad_font_style"
            android:text="2"
            android:layout_weight="1"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/keypad_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/normal_font_style"
            android:text="3"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/regist_phone_text_code_activity_keypad_line_2_linearlayout"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regist_phone_text_code_activity_keypad_line_1_linearlayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/keypad_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/normal_font_style"
            android:text="4"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="@color/white"
            />
        <Button
            android:id="@+id/keypad_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/normal_font_style"
            android:text="5"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/keypad_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/normal_font_style"
            android:text="6"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/regist_phone_text_code_activity_keypad_line_3_linearlayout"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regist_phone_text_code_activity_keypad_line_2_linearlayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/keypad_7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/normal_font_style"
            android:text="7"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="@color/white"
            />
        <Button
            android:id="@+id/keypad_8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/normal_font_style"
            android:text="8"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="@color/white"
            />

        <Button
            android:id="@+id/keypad_9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/normal_font_style"
            android:text="9"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="@color/white"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>