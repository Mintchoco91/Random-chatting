<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "logo_font_style">
        <item name = "android:font">@font/noto_sans_kr_regular</item>
        <item name = "android:textSize">30dp</item>
        <item name = "android:fontWeight">1000</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">@color/main_color_green</item>
    </style>

    <style name = "logo_sub_font_style">
        <item name = "android:font">@font/noto_sans_kr_regular</item>
        <item name = "android:textSize">13dp</item>
        <item name = "android:fontWeight">1000</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">@color/sub_main_color_black</item>
    </style>

    <style name = "normal_font_style">
        <item name = "android:font">@font/noto_sans_kr_regular</item>
        <item name = "android:textColor">@color/sub_main_color_black</item>
        <item name = "android:textStyle">bold</item>
    </style>

    <style name = "keypad_auth_font_style">
        <item name = "android:font">@font/noto_sans_kr_regular</item>
        <item name = "android:textColor">@color/sub_main_color_black</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">45dp</item>
        <item name = "android:includeFontPadding">false</item>
    </style>

    <style name = "keypad_font_style">
        <item name = "android:font">@font/noto_sans_kr_regular</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">20dp</item>
        <item name = "android:includeFontPadding">false</item>
    </style>

    <style name = "editor_font_style">
        <item name = "android:font">@font/noto_sans_kr_regular</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textSize">15dp</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:includeFontPadding">false</item>
        <item name = "android:textColorHint">@color/hint_color</item>
    </style>
</resources>